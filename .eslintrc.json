{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/order": "off"
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "createDefaultProgram": false
  },
  "ignorePatterns": ["node_modules", ".next", "build", "dist", "public", "*.config.js", "*.config.mjs"]
}
